<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">            <!-- Trạng thái bình thường khi không click -->
        <shape
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:shape="rectangle">

            <solid
                android:color="#000000" />            <!-- Thiết lập màu nền cho nút -->

            <stroke
                android:width="0dp"
                android:color="#000000" />

            <corners android:radius="0dp" />

        </shape>
    </item>
    <item>            <!-- Trạng thái bình thường khi không click -->
        <shape
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:shape="rectangle">

            <solid
                android:color="#3d3a3a" />            <!-- Thiết lập màu nền cho nút -->

            <stroke
                android:width="1dp"
                android:color="#ffffff" />

            <corners android:radius="0dp" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>
</selector>