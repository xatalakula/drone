<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">            <!-- Trạng thái bình thường khi không click -->
        <shape
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:shape="oval">

            <solid
                android:color="#ff0000" />            <!-- Thiết lập màu nền cho nút -->

            <stroke
                android:width="1dp"
                android:color="#ff0000" />

            <corners android:radius="10dp" />

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>
    <item android:state_pressed="true">            <!-- Trạng thái bình thường khi không click -->
        <shape
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:shape="oval">

            <solid
                android:color="#a10000" />            <!-- Thiết lập màu nền cho nút -->

            <stroke
                android:width="1dp"
                android:color="#a10000" />

            <corners android:radius="10dp" />

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>
</selector>