<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportProblemFrag">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/radio_btn_1"
            android:text="Lỗi không tương thích thiết bị"
            android:textSize="20dp"
            android:textColor="#111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/radio_btn_2"
            android:text="Lỗi không cập nhật phiên bản"
            android:textSize="20dp"
            android:textColor="#111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/radio_btn_3"
            android:text="Lỗi không nhận được tín hiệu từ drone"
            android:textSize="20dp"
            android:textColor="#111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/radio_btn_4"
            android:text="Lỗi không có âm thanh"
            android:textSize="20dp"
            android:textColor="#111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/radio_btn_5"
            android:text="Lỗi không nhận được thông báo từ hệ thống"
            android:textSize="20dp"
            android:textColor="#111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/radio_btn_6"
            android:text="Lỗi khác"
            android:textSize="20dp"
            android:textColor="#111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10dp"
            android:text="Ghi chú bổ sung: "
            android:textSize="25dp"
            android:textColor="#010ec1"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="0dp"
            android:gravity="left|top"
            android:inputType="textMultiLine"
            android:scrollbars="horizontal"
            android:maxLines="15"
            android:lines="5"
            android:minLines="1"
            android:maxHeight="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/button_complete"
            android:layout_gravity="center"
            android:text="Hoàn tất"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</FrameLayout>