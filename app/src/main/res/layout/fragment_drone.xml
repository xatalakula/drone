<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DroneFrag">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button_connect_drone"
            android:padding="20dp"
            android:layout_marginTop="30dp"
            android:text="Kết nối drone"
            android:textSize="25dp"
            android:textColor="#111"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/button_supervise_drone"
            android:padding="20dp"
            android:layout_marginTop="30dp"
            android:text="Theo dõi drone"
            android:textSize="25dp"
            android:textColor="#111"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_setup_route"
            android:padding="20dp"
            android:layout_marginTop="30dp"
            android:text="Thiết lập lộ trình"
            android:textSize="25dp"
            android:textColor="#111"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />

        <Button
            android:padding="20dp"
            android:layout_marginTop="30dp"
            android:text="Xem trực tiếp"
            android:textSize="25dp"
            android:textColor="#111"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</FrameLayout>