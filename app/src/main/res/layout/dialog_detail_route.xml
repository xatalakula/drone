<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:weightSum="10">
    <TextView
        android:textColor="#040480"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:text="Danh sách checkpoint"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />
    <LinearLayout
        android:layout_marginTop="30dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#111"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:text="Lộ trình"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ListView
                android:id="@+id/list_checkpoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#111"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:text="Điểm đặc biệt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ListView
                android:id="@+id/list_special_checkpoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/button_close_checkpoint"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="Đóng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>