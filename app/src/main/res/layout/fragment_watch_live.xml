<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WatchLiveFrag">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:text="Danh sách các drone đã khởi động"
        android:textSize="24dp"
        android:textColor="#111"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/text_search_watch"
            android:hint="Mã drone"
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/image_voice"
            android:layout_gravity="center|right"
            android:src="@drawable/ic_microphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="60dp"
        android:weightSum="6"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/listview_drone_started"
            android:descendantFocusability="blocksDescendants"
            android:layout_weight="5.7"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </ListView>
        <TextView
            android:layout_weight="0.2"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />
        <TextView
            android:textSize="17dp"
            android:layout_gravity="center"
            android:text="( Chọn 1 drone để xem )"
            android:textStyle="italic"
            android:textColor="#1852ef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>